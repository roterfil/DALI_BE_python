# Environment Configuration for DALI FastAPI Application

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/dali_db

# Application Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@dalicommerce.com
SMTP_FROM_NAME=DALI E-Commerce

# Payment Gateway (Maya)
MAYA_API_KEY=your-maya-api-key
MAYA_SECRET_KEY=your-maya-secret-key
MAYA_BASE_URL=https://pg-sandbox.paymaya.com
MAYA_PUBLIC_KEY=pk-test-your-public-key

# Application URLs
FRONTEND_URL=http://localhost:8000
PAYMENT_SUCCESS_URL=http://localhost:8000/payment/callback/success
PAYMENT_FAILURE_URL=http://localhost:8000/payment/callback/failure
PAYMENT_CANCEL_URL=http://localhost:8000/payment/callback/cancel

# Warehouse Location (for shipping calculations)
WAREHOUSE_LAT=14.5995
WAREHOUSE_LON=120.9842

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-change-this
SESSION_MAX_AGE=86400

# Admin Configuration
ADMIN_EMAIL=admin@dali.com
ADMIN_PASSWORD=admin123

# Static files
STATIC_FILES_PATH=src/main/resources/static
TEMPLATES_PATH=src/main/resources/templates

# Logging
LOG_LEVEL=INFO
